<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <ListView fx:id="friendsList" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
      </ListView>
   </left>
   <top>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="friendButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onFriendAction" text="Amigo">
               <tooltip>
                  <Tooltip text="Hacer un amigo" />
               </tooltip>
               <graphic>
                  <FontIcon iconColor="GREEN" iconLiteral="far-grin-wink" iconSize="24" />
               </graphic>
            </Button>
            <Button fx:id="enemyButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onEnemyAction" text="Enemigo">
               <tooltip>
                  <Tooltip text="Aniquilar enemigo" />
               </tooltip>
               <graphic>
                  <FontIcon iconColor="RED" iconLiteral="far-angry" iconSize="24" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox fx:id="emptyBox" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <FontIcon iconLiteral="far-hand-point-left" iconSize="72" />
            <Label text="Seleccione un amigo de la lista." />
         </children>
      </VBox>
   </center>
</BorderPane>
